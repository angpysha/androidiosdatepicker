    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:paddingVertical="25dp"
    >
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal" android:background="@android:color/holo_orange_light"
                          android:id="@+id/title_container">
                <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/datepicker_cancel" android:text="Cancel"
                        style="?android:attr/borderlessButtonStyle" android:textColor="@android:color/white"
                        android:textAllCaps="true"
                        android:textSize="18sp"/>
                <Space android:layout_width="0dp" android:layout_height="wrap_content"
                       android:layout_weight="1"/>

                <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/datepicker_ok" android:text="Ok"
                        style="?android:attr/borderlessButtonStyle" android:textColor="@android:color/white"
                        android:textAllCaps="true" android:textSize="18sp"/>


            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                          android:orientation="horizontal" android:paddingHorizontal="10dp">
                <NumberPicker android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:id="@+id/datepicker_month" android:layout_weight="1">

                </NumberPicker>
                <Space android:layout_width="0dp" android:layout_height="wrap_content"
                       android:layout_weight="1"/>
                <NumberPicker android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:id="@+id/datepicker_day" android:layout_weight="1">

                </NumberPicker>
                <Space android:layout_width="0dp" android:layout_height="wrap_content"
                       android:layout_weight="1"/>
                <NumberPicker android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:id="@+id/datepicker_year" android:layout_weight="1"
                >

                </NumberPicker>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
